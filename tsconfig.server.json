{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "dist-server",
    "rootDir": "src",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "noCheck": true
  },
  "include": ["src/server/**/*.ts", "src/utils/**/*.ts"],
  "exclude": ["node_modules", "dist", "dist-server", "src/features/**/*"]
}
